div.form-item {
  display: flex;
  justify-content: flex-end;
}

/* ラベル */
label.form-item__label {
  font-size: 13px;
  margin: 15px 0;
  font-weight: bold;
}

/* テキスト・パスワード入力欄 */
input.form-item__text-input {
  margin: 10px 20px;
  width: 270px;
  border-radius: 4px;
  border: 1px solid #CCC;
  padding: 3px 5px;
}

/* 複数行の入力欄 */
textarea.form-item__textarea {
  margin: 10px 20px;
  width: 270px;
  height: 200px;
  border-radius: 4px;
  border: 1px solid #CCC;
  padding: 3px 5px;
}

/* ラジオボタン */
ul.form-item__inline-items {
  display: -webkit-flex;
  display: flex;
  margin: 10px 20px;
  width: 280px;
  height: 36px;
}

/* チェックボックス */
li.form-item__inline-item {
  border-radius: 4px;
  background: #EEE;
  border: 1px solid #CCC;
  font-size: 13px;
  padding: 5px 10px 2px 5px;
}

/* プルダウンセレクト */
select.form-item__select-pull-down {
  border-radius: 4px;
  width: 280px;
  height: 20px;
  margin: 10px 20px;
  background: #EEE;
  font-weight: bold;
}

/* リストセレクト */
select.form-item__select-list {
  width: 280px;
  height: 170px;
  margin: 10px 20px;
  background: #EEE;
  border: solid 1px #CCC;
}

option {
  padding: 8px;
  border-top: solid 1px #BBB;
  font-weight: bold;
  font-size: 13px;
  height: 13px;
}

/* ファイル選択 */
input.form-item__file {
  width: 274px;
  margin: 10px 20px;
  background: #EEE;
  border: solid 1px #CCC;
  padding: 2px;
  font-weight: bold;
}

/* ボタン */
div.form-item__actions {
  width: 280px;
  height: 50px;
  margin:10px 20px;
  font-weight: 13px;
}

ul.form-item__actions-items {
  display: -webkit-flex;
  display: flex;
}

.form-item__action {
  width: 130px;
  height: 30px;
  text-align: center;
  margin: 5px;
  border-radius: 5px;
}

.is-submit {
  color: #DDD;
  background: #444;
}

.is-reset {
  color: #444;
  background: #CCC;
}



/* aside 左の広告ゾーンとローカルナビ */
.aside {
  order: -1;
  padding: 15px;
  background: #555;
}

.aside-ads__image {
  width: 250px;
}
li.aside-ads__item+li.aside-ads__item {
  margin: 10px 0 0;
}

nav.local-nav {
  margin: 20px 0 0;
  width:250px;
  height: 130px;
  border-radius: 4px;
  overflow: auto;
}

li.local-nav__item {
  background: #888;
  padding: 10px 20px;
}


li.local-nav__item+li.local-nav__item {
  margin: 2px 0 0;
}

a.local-nav__link {
  color: #DDD;
  font-size: 14px;
  text-decoration: none;
}



/* footer */
.footer {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  background: #333;
}

nav.footer-nav {
  width: 330px;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  padding: 10px 30px 10px 20px;
}

.footer-nav__link {
  color: #BBB;
  font-size: 12px;
  text-decoration: none;
  line-height: 20px;
}

.footer-nav__link:before {
  content: "> ";
}

.footer_nav_items {
  font-size: 10px;
}

section.about-author {
  margin: 20px 10px;
  width: 400px;
  background: #BBB;
  border-radius: 4px;
}

h2.about-author__title {
  margin: 10px 20px;
  font-size: 12px;
  font-weight: bold;
  color: #444;
}

img.about-author__image {
  margin: 10px;
  border-radius: 50%;
  height: 90px;
  width: 90px;
  float: left;
}

dl.about-author__descriptions {
  display: -webkit-flex;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  width:290px;
  height:200px;
  float:right;
  font-size: 12px;
  font-weight: bold;
  color: #555;
}

dt.about-author__term {
  margin: 9px 10px;
  float:left;
  text-align: right;
  font-size: 12px;
  width:50px;
}


dd.about-author__description {
  margin: 9px 10px;
  float: right;
  width: 200px;
}

dd.about-author__description:last-child {
  height: 100px;
  width: 200px;
  line-height: 18px;
}



/* コピーライト */
.footer-copyright {
  padding: 0 20px 20px;
  width: 800px;
  color: #EEE;
  text-align: center;
  font-size: 12px;
}
