/* 最初のナビゲーション */
ul.global-nav__items {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  height: 50px;
}

li.global-nav__item {
  padding: 20px 0 0;
  height: 30px;
  width: 180px;
  text-align: center;
  background: #DDD;
}
li.global-nav__item:nth-child(2n) {
  background: #AAA;
}

.global-nav__link {
  color: #555;
  font-weight: bold;
  font-size: 14px;
  text-decoration: none;
}

/* bread-crumbs */
nav.bread-crumbs {
  height: 30px;
  background: #555
}

ol.bread-crumbs__items {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-first;
}

.bread-crumbs__item {
  padding: 5px 4px;
}

.bread-crumbs__item+.bread-crumbs__item:before {
  content: "> ";
  color: #AAA;
}

.bread-crumbs__link {
  color: #DDD;
  font-size: 11px;
  text-decoration: none;
}

/* 最初の広告 */
ul.top-ads__items {
  display: -webkit-flex;
  display: flex;
  justify-contents: center;
  background: #CCC;
}

.top-ads__image {
  padding: 15px 0 15px 15px;
  max-width: 250px;
  height:auto;
}

li.top-ads__image+li.top-ads__image {
  margin: 0 0 0 10px;
}

/* メインコンテンツ */
.body {
  display: -webkit-flex;
  display: flex;
  align-content: flex-end;
  flex-wrap: nowrap;
  background: #DDD
}


.main-header {
  display: inline-block;
  position: relative;
  z-index: 0;
  height: 60px;
  background: #EEE;
  border-bottom: 1px solid #AAA;
  width: 98.2%;
}

.main-header:after {
  display: block;
  content: "";
  position: absolute;
  top: 0;
  right: 0;
}

.main-header:after {
  width: 0;
  height: 0;
  border: 13px solid #CCC;
  border-bottom-color: #999;
  border-left-color: #999;
  z-index: 2;
  box-shadow: -1px 2px 1px 0 rgba(0%, 0%, 0%, 0.2);
}

.main-header__title {
  display: inline-block;
  position: relative;
  padding: 0 40px;
  margin: 15px 10px;
  font-size:30px;
  font-weight: bold;
}

.main-header__title:before {
  display: block;
  content: "";
  position: absolute;
  top: 5px;
  left: 0;
  height: 20px;
  width: 20px;
  background-color: #999;
  background-image: linear-gradient(45deg, #333 25%, transparent 25%, transparent 75%, #333 75%, #333),
  linear-gradient(45deg, #333 25%, transparent 25%, transparent 75%, #333 75%, #333);
  background-size:21px 21px;
  background-position:0 0, 10px 10px
}

/* 記事 */
.article {
  margin: 0 5px;
}
.article__title {
  display: inline-block;
  position: relative;
  height:36px;
  font-size: 24px;
  font-weight: bold;
  color: #444;
  margin: 10px 0 0 10px;
  padding: 6px 0 0 20px;
}

.article__title:before, .article__title:after {
  display: block;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 10px;
}

.article__title:before {
  height: 34px;
  background: #444;
}

.article__title:after {
  height: 17px;
  background: #999;
}

p.article__paragraph {
  margin: 5px 10px;
  font-size: 13px;
  color: #555;
  line-height:20px;
}

strong {
  color: black;
  font-weight: bold;
}

h4.article__sub-title {
  height: 30px;
  font-size: 22px;
  padding: 7px 30px 7px 30px;
  font-weight: bold;
  color: #555;
  position: relative;
}

h4.article__sub-title:before{
  content:'';
  height:0;
  width:0;
  display:block;
  border:8px transparent solid;
  border-right-width:0;
  border-left-color:#333;
  position:absolute;
  top:10px;
  left:18px;
}

h4.article__sub-title:after{
  content:'';
  height:15px;
  width:4px;
  display:block;
  background:#333;
  position:absolute;
  top:10px;
  left:12px;
}


/* 番号なしリスト */
li.article__unorder-list-item {
  margin: 5px 10px;
  font-size: 13px;
  line-height: 20px;
  color: #555;
}

li.article__unorder-list-item:before {
  content: '・';
  color: #555;
  font-weight: bold;
}

/* 引用文 */
.article__blockquote {
  display: inline-block;
  position: relative;
  margin: 20px 0 0 0;
}

.article__blockquote:before {
  position: absolute;
  top: 0;
  left: 0;
  content: "\"";
  color: #EEE;
  font-size: 55px;
  z-index: 1;
  width: 40px;
  height: 40px;
  padding: 8px 0 0 10px;
}

.article__blockquote:after {
  position: absolute;
  top: 0;
  left: 0;
  content: "●";
  color: #999;
  width: 60px;
  height: 60px;
  z-index: 0;
  font-size: 40px;
}

p.article__blockquote-paragraph {
  display: inline-block;
  position: relative;
  font-size: 13px;
  line-height: 20px;
  color: #555;
  padding: 40px 5px 20px 40px;
}


p.article__blockquote-paragraph:nth-child(2) {
  display: none;
}

.article__blockquote-paragraph:before {
  display: block;
  position:absolute;
  content: "";
  top: 30px;
  left :17px;
  width: 5px;
  height: 170px;
  background-color: #999;
}


/* 本文の画像 */
img.article__image {
  margin: 10px;
  width: 500px;
  height: 350px;
  position: relative;
}

/* 小見出し */
.article__sub-sub-title {
  margin: 10px 0;
  padding-left: 30px;
  font-weight: bold;
  position: relative;
}

.article__sub-sub-title:before, .article__sub-sub-title:after {
  content: '●';
  font-size: 11px;
  position: absolute;
  top: 3px;
}

.article__sub-sub-title:before {
  color: #444;
  left:10px;
}

h5.article__sub-sub-title:after {
  color: #999;
  left:16px;
}


/* 番号ありリスト */
li.article__order-list-item {
  margin: 10px 10px;
  font-size: 13px;
  line-height: 20px;
  color: #555;
  counter-increment: n;
}

li.article__order-list-item:before {
  content: counter(n) ". ";
  color: #555;
}

/* お問い合わせ */
.form {
  background: white;
  width: 98%;
}

.form__title {
  display: inline-block;
  position: relative;
  padding: 15px 60px;
  font-size: 20px;
  font-weight: bold;
}


.form__title:before {
  content: "";
  display: block;
  position: absolute;
  width: 16px;
  height: 16px;
  border: 1px;
  border-color: #000;
  border-style: solid;
  transform: rotate(45deg);
  border-top-color: #fff;
  border-left-color: #fff;
  top: 9px;
  left: 20px;
}

.form__title:after {
  content: "";
  display: inline-block;
  position: absolute;
  border: 1px solid #000;
  width: 28px;
  height:17px;
  top: 17px;
  left: 14px;
}

